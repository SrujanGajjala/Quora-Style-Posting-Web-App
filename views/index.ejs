<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Posts</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="topDiv">
        <h1>Quora Posts</h1>
        <a href="/posts/new" class="create_post">Create New Post</a>
    </div>
    <br>
    <%for(let post of posts){%>
        <div class="post">
            <h3 class="user">@<%=post.username%></h3>
            <h4 class="content"><%=post.content%></h4>
            <p><%=post.created_at.toString().split(" ").slice(0,5).join("-")%></p>
            <a href="/posts/<%=post.id%>">View Post</a>
            <a href="/posts/<%=post.id%>/edit">Edit Post</a>
            <form method="post" action="/posts/<%=post.id%>?_method=DELETE" >
                <button>Delete Post</button>
            </form>
        </div>
    <%}%>
    <br>
    <a href="/posts/new">Create New Post</a>
</body>
</html>

